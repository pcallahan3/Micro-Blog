<!--Rendering errors message partial with @article instance variable-->
<%= render 'shared/errors', obj: @article %>

<!--Title and description section-->
<div class="row">
  <div class="col-xs-12">

    <!--Rails form_for for a new article which will align every element as a horizontal form-->
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
     <!--Title section-->
    <div class="form-group">
      <div class="control-label col-sm-2">
        <!--Label name and text field for title attribute-->
        <%= f.label :title %>
      </div>
      <div class="col-sm-8">
        <!--Setting tet field to title, with a form control class, a place holder, and autofocus-->
        <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
      </div>
    </div>
    
    <!--Description section-->
    <div class="form-group">
      <div class="control-label col-sm-2">
        <!--Label name and text area for description attribute-->
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <!--Setting text_area to description,increasing the number of rows to 10
            with a form control class, a place holder, and autofocus-->
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article", autofocus: true %>
      </div>
    </div>

     <!--Submit button for form-->
     <div class="form-group">
       <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-primary btn-lg" %>
       </div>
     </div>
    <% end %>
    
    <div class="col-xs-4 col-xs-offset-4">
      <!--Link back to articles_path-->
     [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
    </div>
  </div>
</div>
