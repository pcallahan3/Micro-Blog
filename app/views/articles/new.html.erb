<!--Implementing a view with a form to create a new article-->
<h1>Create an article</h1>


<!--Rails form_for for a new article-->
<%= form_for @article do |f| %>

  <p>
    <!--Label name and text field for title attribute-->
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  
  <p>
     <!--Label name and text area for description attribute-->
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  
  <p>
     <!--Submit button for form-->
    <%= f.submit %>
  </p>
  

<% end %>

